<script>
// Initialize typed.js
function initTyped() {
    new Typed(".typing", {
        strings: ["IT Technician", "Computer Science Student", "Bravo CTO", "Fullstack Developer"],
        typeSpeed: 100,
        backSpeed: 60,
        loop: true
    });
}

// Handle scroll for profile minimization
let isMinimized = false;

function handleScroll() {
    const scrollY = window.scrollY;
    const profileCard = document.getElementById('profile-card');
    const profileContainer = document.getElementById('profile-container');

    if (scrollY > 100 && !isMinimized) {
        isMinimized = true;
        profileCard.classList.add('minimized');
        profileContainer.style.paddingTop = '140px';
    } else if (scrollY <= 100 && isMinimized) {
        isMinimized = false;
        profileCard.classList.remove('minimized');
        profileContainer.style.paddingTop = '0';
    }
}

// Initialize on load
window.addEventListener('DOMContentLoaded', () => {
    initTyped();
    window.addEventListener('scroll', handleScroll);
});
</script>